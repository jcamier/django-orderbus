# Django Settings
SECRET_KEY=django-insecure-dev-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=orderdb
DB_USER=postgres
DB_PASS=postgres
DB_HOST=localhost
DB_PORT=5432

# Google Pub/Sub Configuration
PUBSUB_EMULATOR_HOST=localhost:8085
PUBSUB_PROJECT_ID=demo-poc
PUBSUB_TOPIC_ORDER_CREATED=order.created
PUBSUB_SUBSCRIPTION_ORDER_CREATED=order.created.local

# Webhook Configuration
# Outgoing webhook URL - Get your URL from https://requestcatcher.com/
WEBHOOK_OUTGOING_URL=https://your-name.requestcatcher.com/

# Webhook security - HMAC secret for verifying incoming webhooks
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
WEBHOOK_SECRET=your-secret-key-here

SHOPIFY_SHOP_URL=https://myshopify.com
SHOPIFY_ADMIN_TOKEN=your_admin_token
SHOPIFY_API_VERSION=2024-10 # Pin the version
SHOPIFY_API_SCOPES=read_orders,write_orders,read_products,write_products,read_inventory
SHOPIFY_TIMEOUT = 30  # second

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=django-orderbus
OTEL_EXPORTER_TYPE=jaeger  # Options: 'jaeger' or 'otlp'
# If Django runs on host: use localhost
# If Django runs in Docker: use 'jaeger' (service name) or 'host.docker.internal'
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_METRICS_ENABLED=true
# Note: OTel metrics are exported via OTLP to Jaeger, not directly to Prometheus
# If Django runs on host: use localhost
# If Django runs in Docker: use 'jaeger' (service name)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Prometheus Configuration
PROMETHEUS_EXPORT_MIGRATIONS=false

# Grafana Cloud Prometheus Configuration (optional)
# Get these from your Grafana Cloud dashboard: https://grafana.com/docs/grafana-cloud/monitor-infrastructure/metrics/metrics-prometheus/
GRAFANA_CLOUD_PROMETHEUS_URL=https://prometheus-prod-01-eu-west-0.grafana.net/api/prom/push
GRAFANA_CLOUD_PROMETHEUS_USERNAME=your_grafana_cloud_username
GRAFANA_CLOUD_PROMETHEUS_PASSWORD=your_grafana_cloud_api_key
